import javax.swing.*;
import java.io.*;

public class PersonalDataForm {
    public static void main(String[] args) {
        JFrame frame = new JFrame("بيانات البطاقة");
        frame.setSize(300, 250);
        frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        JPanel panel = new JPanel();
        frame.add(panel);
        placeComponents(panel);
        frame.setVisible(true);
    }

    private static void placeComponents(JPanel panel) {
        panel.setLayout(null);

        JLabel nameLabel = new JLabel("الاسم:");
        nameLabel.setBounds(10, 20, 80, 25);
        panel.add(nameLabel);

        JTextField nameText = new JTextField(20);
        nameText.setBounds(100, 20, 165, 25);
        panel.add(nameText);

        JLabel surnameLabel = new JLabel("اللقب:");
        surnameLabel.setBounds(10, 50, 80, 25);
        panel.add(surnameLabel);

        JTextField surnameText = new JTextField(20);
        surnameText.setBounds(100, 50, 165, 25);
        panel.add(surnameText);

        JLabel dobLabel = new JLabel("تاريخ الميلاد:");
        dobLabel.setBounds(10, 80, 80, 25);
        panel.add(dobLabel);

        JTextField dobText = new JTextField(20);
        dobText.setBounds(100, 80, 165, 25);
        panel.add(dobText);

        JLabel expiryLabel = new JLabel("تاريخ الانتهاء:");
        expiryLabel.setBounds(10, 110, 80, 25);
        panel.add(expiryLabel);

        JTextField expiryText = new JTextField(20);
        expiryText.setBounds(100, 110, 165, 25);
        panel.add(expiryText);

        JButton saveButton = new JButton("حفظ");
        saveButton.setBounds(100, 150, 80, 25);
        panel.add(saveButton);

        saveButton.addActionListener(e -> {
            try (PrintWriter writer = new PrintWriter("personal_data.txt")) {
                writer.println("الاسم: " + nameText.getText());
                writer.println("اللقب: " + surnameText.getText());
                writer.println("تاريخ الميلاد: " + dobText.getText());
                writer.println("تاريخ الانتهاء: " + expiryText.getText());
                JOptionPane.showMessageDialog(panel, "تم حفظ البيانات!");
            } catch (IOException ex) {
                JOptionPane.showMessageDialog(panel, "خطأ في الحفظ!");
            }
        });
    }
}

